<resources>
    <style name="ScientificButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_bg</item>
    </style>
    <style name="NumericButton" parent="ScientificButton">
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="OperationButton" parent="ScientificButton">
        <item name="android:backgroundTint">#F5F5F5</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <style name="EqualsButton" parent="ScientificButton">
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>