<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:weightSum="10"
    tools:context=".ScientificCalculatorActivity">

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_menu_24"
        android:layout_margin="5dp"
        android:contentDescription="Menu Icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Scrollable TextView for secondary result -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Secondary TextView (Previous Expressions) -->
            <TextView
                android:id="@+id/tvsec"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:textSize="25dp"
                android:textAlignment="viewEnd"
                android:gravity="bottom"
                android:padding="8dp"
                android:maxLines="3"
                android:scrollbars="vertical"
                tools:ignore="RtlCompat" />

            <!-- Main TextView (Result Display) -->
            <TextView
                android:id="@+id/tvmain"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:textAlignment="viewEnd"
                android:textSize="45dp"
                android:gravity="bottom"
                android:padding="8dp"
                android:maxLines="5"
                android:scrollbars="vertical"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- First Row: AC, C, (, ), % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="5">
            <Button
                android:id="@+id/bac"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="24sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bc"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="24sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bb1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="("
                android:textSize="24sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bb2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text=")"
                android:textSize="24sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bmod"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="24sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Trigonometric Functions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="5">
            <Button
                android:id="@+id/bsin"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bcos"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="20sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/btan"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="20sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/blog"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="log"
                android:textSize="20sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bln"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="ln"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Advanced Scientific Functions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="5">
            <Button
                android:id="@+id/bfact"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="x!"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bsquare"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="x²"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bsqrt"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="√"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/binv"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="1/x"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bpi"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="π"
                android:textSize="22sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Numeric Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="4">
            <Button
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bdiv"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="28sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- 4,5,6 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="4">
            <Button
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bmul"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="×"
                android:textSize="28sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- 1,2,3 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:weightSum="4">
            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bminus"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="28sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Last Row: 0, ., =, + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/b0"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bdot"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bequal"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="28sp"
                android:textColor="@color/numeric_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
            <Button
                android:id="@+id/bplus"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="28sp"
                android:textColor="@color/function_button_text_color"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>